


<div class="container">
    <h1>Sign up</h1>
    <% if(typeof alert != 'undefined') { %>
        <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
        <% }) %>
    <% } %>

    <% if(typeof message != 'undefined') { %>
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <%= message %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
    <% } %>

<form id="signupform" action="/signup" method="POST" novalidate>
    <div class="container">
        <p>Please fill in this form to create an account.</p>

        <label for="firstName"><strong>First name</strong></label>
        <input type="text" placeholder="Enter first name" id="firstName" name="firstName" required>


        <label for="lastName"><strong>Last Name</strong></label>
        <input type="text" placeholder="Enter last name" id="lastName" name="lastName" required>


        <label for="email"><strong>Email</strong></label>
        <input type="text" placeholder="Enter Email" id="email" name="email" required>


        <label for="psw"><strong>Password</strong></label>
        <input type="password" placeholder="Enter Password" id="psw" name="psw"  required>

        <label for="confirmPsw"><strong>Re Enter Password</strong></label>
        <input type="password" placeholder="Re-Enter Password" id="confirmPsw"name="confirmPsw" required>

        <div class="">
            <button type="submit" class="signupbtn">Sign Up</button>
        </div>
    </div>
</form>

